
<div id="content-wrapper" class=" py-[60px] ">
    <div class="grid grid-col-3 grid-row-2 gap-x-5 w-fit mx-auto ">
      <button id="upload_widget" class="cloudinary-button">Upload Photo</button>
       <div id="accountForm" class=" rounded-3xl bg-gray-300 max-h-xl">
          <form action="/users/profile/edit/?_method=PUT" method="post" class="p-16 flex flex-col flex-no-wrap font-bold uppercase">
           <label for="firstName">First Name </label>
           <input type="text" id="firstName" name="fName" class="rounded-xl w-[500px] h-[40px] hover:ring text-center  focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 my-5" value="<%= user.first_name %>" required>
           <label for="lastName">Last Name</label>
           <input type="text" id="lastName" name="lName" class="rounded-xl w-[500px] h-[40px] hover:ring text-center  focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 my-5" value="<%= user.last_name %>" required>
           <label for="email">Email </label>
           <input type="email" id="email" name="email" class="rounded-xl w-[500px] h-[40px] hover:ring text-center  focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 my-5" value="<%= user.email %>" required>
           <!-- <label for="profile_picture">Profile Picture</label> -->
           <input type="str" id="profile_picture" name="pPic" value="<%= user.profile_picture %>" class="rounded-xl w-[500px] h-[40px] hover:ring text-center  focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 mt-5" required hidden>
           <button type="submit" class="btn-primary mt-10 w-1/2 mx-auto h-[45px]">Update Information</button>
         </form>
       </div>
     </div>
  </div>
