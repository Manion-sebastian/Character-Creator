<% if(plans){ %>
<% let latestPlan = plans.length - 1 %>
<div id="pageStructure" class="px-[120px] py-[40px] w-screen h-fit grid grid-col-5 gap-16">
    <div id="planSection" class="bg-pink-200 min-h-[400px] col-start-1 col-end-1">
        <div class="bg-red-100 h-[300px] min-w-[350px]" >
            <a href="/plans">Create Plan</a>
        </div>
    </div>
    <div id="showPlan" class=" bg-blue-200 h-fit w-full col-start-2 col-end-5">
        <% if(plans && latestPlan > 0){ %>
        <div class="grid grid-col-3">
            <div id="banner" class="col-start-1">
                <% if(plans && latestPlan > 0){ %>
                    <img src="<%= plans[latestPlan].banner_image %>" alt="banner" class="">
                    <% } %>
            </div>
            <div class="col-start-2 col-end-3">
                <div class=" h-1/2 bg-pink-300 w-full uppercase text-[32px]">title: <%= plans[latestPlan].name %></div>
                <div class=" h-1/2 bg-pink-400 w-full uppercase text-[22px]">description: <%= plans[latestPlan].description %></div>
            </div>
            <div class=" p-10 h-fit bg-pink-500 content-wrap uppercase text-[24px] col-start-1 col-end-3 ">content: <%= plans[latestPlan].content %></div>
        </div>
        
        <% } %>

    </div>
    
</div>
<% } %>