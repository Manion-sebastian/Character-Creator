<div id="content-wrapper" class=" py-[60px] ">
    <div class="grid grid-col-3 grid-row-2 gap-x-5 w-[900px] mx-auto ">
       <div id="planForm" class=" rounded-3xl bg-gray-300 max-h-xl">
          <form enctype="multipart/form-data" action="/plans" method="post" class="p-16 flex flex-col flex-no-wrap font-bold uppercase">
            <label for="title">Title</label>
            <input type="text" id="title" name="name"  required>
            <label for="type">pLan Type</label>
            <select name="type" id="type">
              <option value="1">To-do</option>
              <option value="2">Note</option>
              <option value="3">Goal</option>
              <option value="4">General</option>
              <option value="5">Reminder</option>
            </select>
            <label for="description">Description</label>
            <input type="text" id="description" name="desc" required>
            <label for="content">pLan Content</label>
            <textarea name="content" id="content" cols="30" rows="10" required></textarea>
            <input type="number" id="userId" name="userId" value="<%= user.id %>" required hidden>
            <label for="banner">Banner File </label>
            <div class="mx-auto">
              <input class="inline w-1/3" type="file" id="banner" name="banner" >
            </div>
           <button type="submit" class="btn-primary mt-10 w-1/2 mx-auto h-[45px]">Create Plan</button>
         </form>
       </div>
     </div>
  </div>